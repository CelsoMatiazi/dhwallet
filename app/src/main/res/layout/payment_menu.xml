<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="28dp"
    android:paddingBottom="23dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/pay_icon_1"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:src="@drawable/ic_pay_icon_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/pay_icon_2"
        />

    <TextView
        style="@style/Subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pay_icon_1"
        app:layout_constraintStart_toStartOf="@id/pay_icon_1"
        app:layout_constraintEnd_toEndOf="@id/pay_icon_1"
        android:text="Luz"
        android:layout_marginTop="17dp"
        />

    <ImageView
        android:id="@+id/pay_icon_2"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:src="@drawable/ic_pay_icon_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/pay_icon_1"
        app:layout_constraintEnd_toStartOf="@id/pay_icon_3"
        />

    <TextView
        style="@style/Subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pay_icon_2"
        app:layout_constraintStart_toStartOf="@id/pay_icon_2"
        app:layout_constraintEnd_toEndOf="@id/pay_icon_2"
        android:text="Agua"
        android:layout_marginTop="17dp"
        />

    <ImageView
        android:id="@+id/pay_icon_3"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:src="@drawable/ic_pay_icon_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/pay_icon_2"
        app:layout_constraintEnd_toStartOf="@id/pay_icon_4"
        />

    <TextView
        style="@style/Subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pay_icon_3"
        app:layout_constraintStart_toStartOf="@id/pay_icon_3"
        app:layout_constraintEnd_toEndOf="@id/pay_icon_3"
        android:text="Internet"
        android:layout_marginTop="17dp"
        />

    <ImageView
        android:id="@+id/pay_icon_4"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:src="@drawable/ic_pay_icon_4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/pay_icon_3"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        style="@style/Subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pay_icon_4"
        app:layout_constraintStart_toStartOf="@id/pay_icon_4"
        app:layout_constraintEnd_toEndOf="@id/pay_icon_4"
        android:text="@string/pagamento"
        android:layout_marginTop="17dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>